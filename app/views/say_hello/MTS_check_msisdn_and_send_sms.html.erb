<script>
  function controlF2(x) {
    var flag = true, txt = '';
    if(document.getElementById('verificationcode_mts').value == '') { flag = false; txt += 'Вы не ввели код подтверждения ! \r\n'; }
    else {
      if (/^\d[\d\(\)\ -]{4,14}\d$/.test(document.getElementById('verificationcode_mts').value) == false) {
        flag = false;
        txt = 'Неправильный формат ввода ! \r\n';
      }
    }
    if(flag) x.submit();
    else { alert(txt); }
  }
</script>


<%= form_tag '/say_hello/MTS_input_and_verify_code_success', :onsubmit=>"controlF2(this); return false;"  do %>
