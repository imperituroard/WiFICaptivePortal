<script>
  function controlF2(x) {
    var flag = true, txt = '';
    if(document.getElementById('verificationcode_mts').value == '') { flag = false; txt += 'Вы не ввели код подтверждения ! \r\n'; }
    else {
      if (/[0-9]{4}/.test(document.getElementById('verificationcode_mts').value) == false) {
        flag = false;
        txt = 'Неправильный формат ввода ! \r\n';
      }
    }
    if(flag) x.submit();
    else {
      swal({
        title: "Error!",
        text: txt,
        type: "error",
        confirmButtonText: "Ok",
        confirmButtonColor: "#e30613"
      });
    }
  }
</script>


<%= form_tag '/say_hello/MTS_input_and_verify_code', :onsubmit=>"controlF2(this); return false;"  do %>
